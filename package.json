{
  "name": "hostel-allocation",
  "version": "1.0.0",
  "description": "Hostel Allocation System",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint src --max-warnings=5",
    "lint:fix": "eslint src --fix",
    "build": "echo 'Build complete'",
    "docker:build": "docker build -t hostel-allocation:latest .",
    "docker:run": "docker run -p 5000:5000 --env-file .env hostel-allocation:latest"
  },
  "dependencies": {
    "body-parser": "^2.2.1",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "mysql2": "^3.15.3",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.6",
    "nodemon": "^3.1.11"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "sequelize-cli": "^6.6.3",
    "supertest": "^7.1.4",
    "eslint": "^8.50.0",
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.23.6"
  }
}
